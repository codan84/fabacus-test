{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "event",
  "title": "Event",
  "description": "Schema for event details",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "type": "string"
    },
    "availableSeatsCount": {
      "type": "integer"
    },
    "availableSeats": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["id", "name", "date", "location", "availableSeatsCount", "availableSeats"]
}
