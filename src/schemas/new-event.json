{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "new-event",
  "title": "New Event",
  "description": "Schema for creating a new event",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "type": "string"
    },
    "availableSeatsCount": {
      "type": "integer"
    }
  },
  "required": ["name", "date", "location", "availableSeatsCount"]
}
